<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.UserMapper">
    <select id="getAllUser" resultMap="userMap">
        select * from exam_user;
    </select>

    <select id="getUserById" resultMap="userMap">
        select * from exam_user where id = #{id};
    </select>

    <insert id="addUser">
        insert into exam_user(name, age, detail)
        values (#{name}, #{age}, #{detail});
    </insert>

    <update id="updateUser">
        update exam_user
        set name=#{name}, age=#{age}, detail=#{detail}
        where id=#{id};
    </update>

    <delete id="deleteUser">
        delete from exam_user
        where id=#{id};
    </delete>
    
    <resultMap id="userMap" type="com.example.pojo.User">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="detail" column="detail"/>
        <result property="createdDate" column="created_date"/>
    </resultMap>

</mapper>